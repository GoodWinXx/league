<van-cell-group>
  <van-field
    value="{{ mobile }}"
    required
    clearable
    label="手机号"
    bind:change="bindInputMobile"
    placeholder="请输入手机号"
  />

  <van-field
    value="{{ auth_code }}"
    label="授权码"
    placeholder="请输入授权码"
    required
    bind:change="bindInputAuthcode"
    border="{{ false }}"
  />
</van-cell-group>

<view class="flow-fixed-footer b-f m-top10">
    <view class="dis-flex chackout-box">
      
      <view bindtap="submitBind" class="chackout-right" style="background-color:#ff9966">
        <text class="flow-btn">确认</text>
      </view>
    </view>
  </view>
