/* 附近商家 */

.merchant {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 20rpx;
  margin-top: 5rpx;
}

.merchant-title {
  display: flex;
  flex-direction: row;
  padding: 30rpx 0 0 0;
  justify-content: center;
  align-items: center;
}

.merchant-title image {
  width: 48rpx;
  height: 48rpx;
}

.merchant-title text {
  font-size: 32rpx;
  color: #222;
  margin-left: 5rpx;
}

.freshcode {
  margin-left: 100rpx;
  padding: 10rpx 15rpx;
  color: #fe656c;
  border: 1px solid #fe656c;
  border-radius: 10rpx;
  font-size: 28rpx;
  position: absolute;
  top: 80rpx;
  right: 100rpx;
}

.nearby-shops-box {
  margin: 30rpx 20rpx;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #efefef;
  padding-bottom: 30rpx;
}

.nearby-shops-img {
  width: 140rpx;
  height: 140rpx;
  border: 1rpx solid #ddd;
  margin-right: 20rpx;
}

.nearby-shops-con {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.nearby-shops-desc-title {
  color: #222;
  font-size: 32rpx;
  font-weight: 700;
}

.nearby-shops-desc {
  display: flex;
  flex-direction: column;
}

.nearby-shops-slogan {
  display: flex;
  flex-direction: row;
  margin-top: 6rpx;
}

.nearby-shops-coupon {
  border: 1px solid #ff4e00;
  background: #ff4e00;
  margin-right: 20rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.nearby-shops-coupon .icon {
  padding: 0 6rpx;
  color: #fff;
}

.nearby-shops-coupon .text {
  margin: 2rpx 2rpx 2rpx 0;
  background: #fff;
  color: #ff4e00;
  height: 32rpx;
  display: inline-block;
  padding: 0 4rpx;
}

.nearby-shops-discount {
  color: #fff;
  font-size: 20rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
}

.nearby-shops-discount text {
  background: #fd9c02;
  margin-right: 10rpx;
  padding: 0 6rpx;
  border-radius: 4rpx;
  line-height: 32rpx;
  height: 32rpx;
  position: relative;
}

.nearby-shops-discount .distance {
  position: absolute;
  right: 30rpx;
  background: #fff;
  font-size: 24rpx;
  color: #222;
  font-weight: 700;
}

.nearby-shops-box-phone {
  width: 48rpx;
  height: 48rpx;
  margin-top: 45rpx;
}

.iconfont.icon-gengduo1 {
  color: #bfbfbf;
  font-size: 40rpx;
  margin-top: 40rpx;
}

.recommend-product-price {
  font-size: 32rpx;
  color: #ee2b46;
  font-weight: 700;
}

.nearby-shops-tel {
  margin-top: 4px;
  padding-left: 20px;
  color: #ff8519;
  background: url(data:image/png;base64,) left center no-repeat;
  background-size: 20px;
}

.nearby-shops-add-nav {
  padding-top: 10px;
}

.nearby-shops-address {
  box-sizing: border-box;
  width: 70%;
  float: left;
  padding-right: 10px;
  color: #999;
}

.nearby-shops-navigation {
  box-sizing: border-box;
  width: 30%;
  float: left;
  margin-top: 10px;
  padding-right: 26px;
  text-align: right;
  color: #1f88f4;
  background: url(data:image/png;base64,) right center no-repeat;
  background-size: 20px;
}

.supernatant {
  position: absolute;
  top: 50rpx;
  left: 50rpx;
  background: rgba(0, 0, 0, 0.7);
  padding: 8rpx;
  border-radius: 8rpx;
}

.supernatant image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 8rpx;
}

.supernatant text {
  margin-left: 8rpx;
  color: #fff;
  line-height: 50rpx;
  margin-right: 10rpx;
  font-size: 26rpx;
}

.nearby-shops-funny {
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}

.funny-coupon {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 0 20rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.funny-coupon:last-child {
  padding-bottom: 0;
  border-bottom: 0;
}

.funny-coupon-desc {
  padding-top: 4rpx;
  display: flex;
  flex-direction: column;
  width: 500rpx;
}

.funny-coupon-desc-all {
  display: flex;
  flex-direction: row;
  line-height: 30rpx;
}

.funny-coupon-desc-sign {
  width: 30rpx;
  height: 30rpx;
  padding: 0 2px;
  font-size: 20rpx;
  background: #fe656c;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
  border-radius: 4px;
}

.funny-coupon-desc-price {
  font-size: 36rpx;
  color: #ff5b63;
  margin: 0 20rpx;
}

.funny-coupon-desc-title {
  font-size: 26rpx;
  color: #151515;
  line-height: 30rpx;
  width: 400rpx;
}

.funny-coupon-origin-price {
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
  margin-left: 50rpx;
  text-decoration: line-through;
}

.funny-coupon-origin-share-price {
  font-size: 26rpx;
  color: #1f88f4;
  margin-top: 20rpx;
  margin-left: 50rpx;
}

.funny-coupon-click {
  display: flex;
  flex-direction: column;
}

.funny-coupon-btn {
  width: 120rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  background: #ff4e00;
  font-size: 28rpx;
  border-radius: 4px;
}

.funny-coupon-residue {
  color: #666;
  font-size: 20rpx;
  width: 120rpx;
  text-align: center;
  margin-top: 15rpx;
}

.day-recommend {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
  padding: 20rpx 0;
  background: #fff;
}

.day-recommend-title {
  color: #222;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.day-recommend-one image {
  width: 750rpx;
}

.day-recommend-two {
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #eee;
}

.day-recommend-two image {
  width: 50%;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
}

.day-recommend-two image:last-child {
  border-right: 0;
}